@model IEnumerable<OnlineBookLibrary.Models.Book>

@{
    ViewData["Title"] = "Books";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Books</h1>
    <a asp-action="Create" class="btn btn-success px-4">
        <i class="bi bi-plus-lg"></i> Create New
    </a>
</div>

<table class="table table-bordered table-hover shadow-sm rounded-3">
    <thead class="table-light">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.Author)</th>
            <th>@Html.DisplayNameFor(model => model.Genre)</th>
            <th>@Html.DisplayNameFor(model => model.PublishedYear)</th>
            <th>@Html.DisplayNameFor(model => model.IsAvailable)</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @for (int i = 0; i < Model.Count(); i++)
        {
            var item = Model.ElementAt(i);
            var rowClass = i % 2 == 0 ? "bg-secondary bg-opacity-10" : "";


            <tr class="@rowClass">
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Author)</td>
                <td>@Html.DisplayFor(modelItem => item.Genre)</td>
                <td>@Html.DisplayFor(modelItem => item.PublishedYear)</td>
                <td>
                    @if (item.IsAvailable)
                    {
                        <span class="text-success fs-5" title="Available">&#10003;</span>
                    }
                    else
                    {
                        <span class="text-danger fs-5" title="Not Available">&#10007;</span>
                    }
                </td>
                <td class="d-flex gap-2 flex-wrap">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">
                        <i class="bi bi-info-circle"></i> Details
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
